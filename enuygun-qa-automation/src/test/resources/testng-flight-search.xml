<?xml version="1.0" encoding="UTF-8"?>
<suite name="Flight Search Basic Test Suite" verbose="1" parallel="tests" thread-count="2">
    <parameter name="browser" value="chrome"/>
    <parameter name="environment" value="dev"/>
    
    <listeners>
        <listener class-name="org.testng.reporters.XMLReporter"/>
        <listener class-name="org.testng.reporters.JUnitReportReporter"/>
    </listeners>
    
    <!-- Smoke Tests - Critical Path -->
    <test name="Flight Search Smoke Tests - Chrome" preserve-order="true">
        <parameter name="browser" value="chrome"/>
        <groups>
            <run>
                <include name="Smoke"/>
                <include name="UI"/>
            </run>
        </groups>
        <classes>
            <class name="com.enuygun.qa.ui.FlightSearchBasicTest">
                <methods>
                    <include name="testBasicFlightSearchWithTimeFilter"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Cross-Browser Testing - Chrome -->
    <test name="Flight Search Tests - Chrome Browser" preserve-order="true">
        <parameter name="browser" value="chrome"/>
        <groups>
            <run>
                <include name="UI"/>
                <include name="Regression"/>
            </run>
        </groups>
        <classes>
            <class name="com.enuygun.qa.ui.FlightSearchBasicTest"/>
        </classes>
    </test>
    
    <!-- Cross-Browser Testing - Firefox -->
    <test name="Flight Search Tests - Firefox Browser" preserve-order="true" enabled="true">
        <parameter name="browser" value="firefox"/>
        <groups>
            <run>
                <include name="UI"/>
                <include name="Smoke"/>
            </run>
        </groups>
        <classes>
            <class name="com.enuygun.qa.ui.FlightSearchBasicTest">
                <methods>
                    <include name="testBasicFlightSearchWithTimeFilter"/>
                    <include name="testFlightSearchWithVariousTimeRanges"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Regression Tests - Full Suite -->
    <test name="Flight Search Regression Tests" preserve-order="true">
        <parameter name="browser" value="chrome"/>
        <groups>
            <run>
                <include name="Regression"/>
                <include name="UI"/>
            </run>
        </groups>
        <classes>
            <class name="com.enuygun.qa.ui.FlightSearchBasicTest"/>
        </classes>
    </test>
    
    <!-- Performance Tests -->
    <test name="Flight Search Performance Tests" preserve-order="true" enabled="false">
        <parameter name="browser" value="chrome"/>
        <groups>
            <run>
                <include name="Load"/>
                <include name="UI"/>
            </run>
        </groups>
        <classes>
            <class name="com.enuygun.qa.ui.FlightSearchBasicTest">
                <methods>
                    <include name="testFlightSearchPerformance"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>